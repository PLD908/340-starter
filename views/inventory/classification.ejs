<div class="inventory-container">
  <h1><%= title %></h1>
  <% if (vehicles.length > 0) { %>
    <div class="vehicle-grid">
      <% vehicles.forEach(vehicle => { %>
        <a href="/inv/detail/<%= vehicle.inv_id %>" class="vehicle-card">
          <% if (vehicle.inv_image && vehicle.inv_image.startsWith('data:image/')) { %>
            <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" class="card-image">
          <% } else { %>
            <img src="/<%= vehicle.inv_image || '/images/vehicles/no-image.png' %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" class="card-image <%= !vehicle.inv_image || vehicle.inv_image.includes('no-image') ? 'missing' : '' %>">
          <% } %>
          <div class="card-info">
            <h3><%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
            <p>$<%= Number(vehicle.inv_price).toFixed(2) %></p>
          </div>
        </a>
      <% }) %>
    </div>
  <% } else { %>
    <p>No vehicles found for this classification.</p>
  <% } %>
  <p><a href="/" class="home-link">Return to Homepage</a></p>
</div>