<div class="login-container">
  <h1><%= title %></h1>
  <% if (typeof messages !== 'undefined' && (messages.error || messages.success)) { %>
  <div class="flash-message">
    <% if (messages.error) { %>
    <ul class="error">
      <% messages.error.forEach(msg => { %>
      <li><%= msg %></li>
      <% }) %>
    </ul>
    <% } %> <% if (messages.success) { %>
    <ul class="success">
      <% messages.success.forEach(msg => { %>
      <li><%= msg %></li>
      <% }) %>
    </ul>
    <% } %>
  </div>
  <% } %>
  <% if (typeof errors !== 'undefined' && errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  <form class="login-form" action="/account/login" method="post">
    <div>
      <label for="account_email">Email:</label>
      <input
        type="email"
        id="account_email"
        name="account_email"
        value="<%= (messages && messages.error) ? locals.account_email || '' : '' %>"
        required
      />
    </div>
    <div>
      <label for="account_password">Password:</label>
      <input
        type="password"
        id="account_password"
        name="account_password"
        value=""
        required
      />
    </div>
    <button type="submit">Login</button>
  </form>
  <p><a href="/account/register">Register</a></p>
</div>